<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean class="com.krushnas.springcore.bean.CompanyBean">
		<property name="id" value="1" />
		<property name="companyName" value="TestYantra" />
		<property name="employees">
			<list>
				<bean class="com.krushnas.springcore.bean.EmployeeBean" name="employee1">
					<property name="id" value="1" />
					<property name="name" value="Alex" />
					<property name="address" value="Mumbai" />
				</bean>
				
				<bean class="com.krushnas.springcore.bean.EmployeeBean" name="employee2">
					<property name="id" value="2" />
					<property name="name" value="Rolex" />
					<property name="address" value="Pune" />
				</bean>
				
				<bean class="com.krushnas.springcore.bean.EmployeeBean" name="employee3">
					<property name="id" value="3" />
					<property name="name" value="Tim" />
					<property name="address" value="Beed" />
				</bean>
			</list>
		</property>
	</bean>

</beans>